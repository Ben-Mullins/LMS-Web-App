@page
@model Lightaplusplus.Pages.Courses.AddCourseModel
@{
    ViewData["Title"] = "Create New Course";
}

<div>
    <h1>Create a New Course</h1>
    <div class="row">
        <form method="post" class="w-100">
            <div class="col-8 center">
                <div class="form-row">
                    <div class="col-2 form-group">
                        <label asp-for="CourseCode" class="control-label">Course Code</label>
                        <input asp-for="CourseCode" class="form-control" type="text" placeholder="CS" required />
                        <span asp-validation-for="CourseCode" class="text-danger">@Model.ExistingCourseError</span>
                    </div>
                    <div class="col-3 form-group">
                        <label asp-for="CourseNumber" class="control-label">Course Number</label>
                        <input asp-for="CourseNumber" class="form-control" type="text" placeholder="1010" required />
                        <span asp-validation-for="CourseNumber" class="text-danger">@Model.CourseError</span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CourseName" class="control-label">Course Name</label>
                    <input asp-for="CourseName" class="form-control" type="text" placeholder="Intro to Computer Science" required />
                    <span asp-validation-for="CourseName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseDescription">Course Description</label>
                    <textarea asp-for="CourseDescription" class="form-control" required></textarea>
                    <span asp-validation-for="CourseDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CourseDepartment">Course Description</label>
                    <select asp-for="CourseDepartment" class="form-control" required>
                        <option value="">Select Department</option>
                        @foreach(var department in Model.Departments) {
                            <option value="@department">@department</option>
                        }
                    </select>
                    <span asp-validation-for="CourseDepartment" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-2">
                        <label asp-for="CourseCreditHours" class="control-label">Course Credit Hours</label>
                        <input asp-for="CourseCreditHours" class="form-control" type="number" required />
                        <span asp-validation-for="CourseCreditHours" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Add Course</button>
                <a class="btn btn-danger" asp-page="/Welcome" asp-route-id="@Model.id">Cancel</a> @*Todo: Change this to redirect to the Courses overview page*@
            </div>
        </form>
    </div>
</div>
