@page
@model Lightaplusplus.Pages.Courses.AddSectionModel
@{
    ViewData["Title"] = "Create New Section";
}

<div>
    <h1>Create a New Section</h1>
    <div class="row">
        <form method="post" class="w-100">
            <div class="col-8 center">
                <div class="form-group">
                    <label asp-for="Course" class="control-label">Course</label>
                    <input asp-for="Course" class="form-control" id="courseName" type="text" required  placeholder="Start typing to search"/>
                    <span asp-validation-for="Course" class="text-danger">@Model.CourseError</span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label">Location</label>
                    <input asp-for="Location" class="form-control" type="text" required />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="col-3 form-group">
                        <label asp-for="StartTime" class="control-label">Start Time</label>
                        <input asp-for="StartTime" class="form-control" type="time" asp-format="{0:HH:mm}" required />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-3 form-group">
                        <label asp-for="EndTime" class="control-label">End Time</label>
                        <input asp-for="EndTime" class="form-control" type="time" asp-format="{0:HH:mm}" required />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Days Taught</label>
                    <div class="form-check">
                        <input asp-for="isOnMonday" class="form-check-input" type="checkbox" />
                        <label asp-for="isOnMonday" class="form-check-label">Monday</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="isOnTuesday" class="form-check-input" type="checkbox" />
                        <label asp-for="isOnTuesday" class="form-check-label">Tuesday</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="isOnWednesday" class="form-check-input" type="checkbox" />
                        <label asp-for="isOnWednesday" class="form-check-label">Wednesday</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="isOnThursday" class="form-check-input" type="checkbox" />
                        <label asp-for="isOnThursday" class="form-check-label">Thursday</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="isOnFriday" class="form-check-input" type="checkbox" />
                        <label asp-for="isOnFriday" class="form-check-label">Friday</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="isOnSaturday" class="form-check-input" type="checkbox" />
                        <label asp-for="isOnSaturday" class="form-check-label">Saturday</label>
                    </div>
                    <div class="form-check">
                        <input asp-for="isOnSunday" class="form-check-input" type="checkbox" />
                        <label asp-for="isOnSunday" class="form-check-label">Sunday</label>
                    </div>
                    <span asp-validation-for="Sections.DaysTaught" class="text-danger">@Model.DaysError</span>
                </div>
                <div class="form-row">
                    <div class="form-group col-4">
                        <label asp-for="Capacity" class="control-label">Student Capacity</label>
                        <input asp-for="Capacity" class="form-control" type="number" required />
                        <span asp-validation-for="Capacity" class="text-danger">@Model.CapacityError</span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Add Course</button>
                <a class="btn btn-danger" asp-page="/Courses/Index" asp-route-id="@Model.InstructorId">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script language="JavaScript" type="text/javascript">
    $(document).ready(function () {
        $('#courseName').autocomplete({
            source: '@Url.Page("/Courses/AddSection", "search")'
        })
    })
</script>